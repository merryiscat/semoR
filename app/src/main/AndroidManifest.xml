<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 알람 관련 권한 -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SYSTEM_EXEMPTED" />
    
    <!-- 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- 풀스크린 인텐트 권한 (Android 14+) -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    
    <!-- 🎙️ 코골이 녹음 권한 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <application
        android:name=".SemoAlarmApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SemoR"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SemoR">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.AddEditAlarmActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity" />

        <activity
            android:name=".ui.activities.AddEditCategoryActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity" />

        <activity
            android:name=".ui.activities.TimerListActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity" />

        <activity
            android:name=".ui.activities.AddEditTimerActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.TimerListActivity" />

        <!-- 🐱 캐릭터 시스템 테스트 액티비티 (개발자용 히든 기능) -->
        <activity
            android:name=".character.CharacterTestActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:theme="@style/Theme.SemoR" />

        <!-- 🐱 메리 캐릭터 풀스크린 알람 액티비티 -->
        <activity
            android:name=".ui.activities.AlarmFullScreenActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:showOnLockScreen="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.FullScreenAlarm" />

        <!-- 🎙️ 코골이 녹음 전체 목록 액티비티 -->
        <activity
            android:name=".ui.activities.AllSnoringRecordingsActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:theme="@style/Theme.SemoR" />

        <!-- 알람 수신자 -->
        <receiver
            android:name=".receivers.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- 알람 알림 수신자 (새로운 방식) -->
        <receiver
            android:name=".receivers.AlarmNotificationReceiver"
            android:enabled="true"
            android:exported="false"
            android:directBootAware="true" />

        <!-- 부팅 완료 수신자 -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- 알람 서비스 -->
        <service
            android:name=".services.AlarmService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback|systemExempted" />

        <!-- 타이머 포그라운드 서비스 -->
        <service
            android:name=".services.TimerForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

        <!-- 수면 추적 포그라운드 서비스 -->
        <service
            android:name=".services.SleepTrackingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="systemExempted" />

    </application>

</manifest>