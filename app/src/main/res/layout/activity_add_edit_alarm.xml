<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".ui.activities.AddEditAlarmActivity">

    <!-- Simple Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/md_theme_surfaceContainerLow"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/btn_add"
        app:titleTextColor="@color/md_theme_onSurface"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@color/md_theme_onSurface" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 시간 선택 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/md_theme_surface"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- AM/PM을 맨 앞에 배치 -->
                        <NumberPicker
                            android:id="@+id/amPmPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:theme="@style/Material3NumberPickerTheme" />

                        <!-- 시간 NumberPicker -->
                        <NumberPicker
                            android:id="@+id/hourPicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:theme="@style/Material3NumberPickerTheme" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="24sp"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginHorizontal="4dp" />

                        <!-- 분 NumberPicker -->
                        <NumberPicker
                            android:id="@+id/minutePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:theme="@style/Material3NumberPickerTheme" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 알람명 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/alarm_label"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAlarmLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 반복 설정 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/md_theme_surface"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 제목 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요일"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_onSurface"
                        android:layout_marginBottom="16dp" />

                    <!-- 1줄: 한 번만, 2회 반복, 3회 반복 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOnce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="한 번만"
                            android:layout_marginEnd="8dp"
                            android:checked="true"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTwice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2회 반복"
                            android:layout_marginEnd="8dp"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3회 반복"
                            style="@style/DayChipStyle" />

                    </LinearLayout>

                    <!-- 2줄: 요일 선택 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day_monday"
                            android:layout_marginEnd="2dp"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day_tuesday"
                            android:layout_marginEnd="2dp"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day_wednesday"
                            android:layout_marginEnd="2dp"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day_thursday"
                            android:layout_marginEnd="2dp"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day_friday"
                            android:layout_marginEnd="2dp"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day_saturday"
                            android:layout_marginEnd="2dp"
                            style="@style/DayChipStyle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSun"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day_sunday"
                            style="@style/DayChipStyle" />

                    </LinearLayout>

                    <!-- 3줄: 전체 선택 / 전체 해제 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnSelectAll"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="전체 선택"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnDeselectAll"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="전체 해제"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 소리 & 진동 설정 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/md_theme_surface"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 제목 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소리 &amp; 진동"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_onSurface"
                        android:layout_marginBottom="16dp" />

                    <!-- 알람음 선택 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="알람음"
                            android:textSize="16sp"
                            android:textColor="@color/md_theme_onSurface" />

                        <Button
                            android:id="@+id/buttonSelectSound"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="기본 알람음"
                            android:textSize="14sp"
                            android:paddingHorizontal="16dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- 볼륨 설정 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="볼륨"
                            android:textSize="16sp"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginEnd="16dp" />

                        <SeekBar
                            android:id="@+id/seekBarVolume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="70" />

                        <TextView
                            android:id="@+id/textViewVolumePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70%"
                            android:textSize="14sp"
                            android:textColor="@color/md_theme_onSurface"
                            android:layout_marginStart="8dp"
                            android:minWidth="40dp"
                            android:gravity="end" />

                        <!-- 볼륨 테스트 버튼 -->
                        <Button
                            android:id="@+id/buttonTestVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="🔊"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"
                            android:minWidth="40dp"
                            android:paddingHorizontal="8dp"
                            android:backgroundTint="@color/neon_blue"
                            android:textColor="@android:color/black"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- 진동 모드 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="진동 모드"
                                android:textSize="16sp"
                                android:textColor="@color/md_theme_onSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="볼륨 0%일 때 자동 활성화"
                                android:textSize="12sp"
                                android:textColor="@color/md_theme_onSurfaceVariant"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchVibrationMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SemoRSwitchStyle" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 저장/취소 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="@string/btn_cancel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/btn_save"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/neon_blue"
                    android:textColor="@color/day_chip_on_text"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>