<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 오늘의 요약 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌟 오늘의 요약"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    style="@style/TextAppearance.Material3.TitleMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- 수면 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="😴"
                            android:textSize="24sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/textTodaySleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7시간 30분"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            style="@style/TextAppearance.Material3.BodyMedium" />

                        <TextView
                            android:id="@+id/textTodaySleepStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="좋음"
                            android:textSize="12sp"
                            android:textColor="#10B981"
                            style="@style/TextAppearance.Material3.BodySmall" />

                    </LinearLayout>

                    <!-- 알람 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏰"
                            android:textSize="24sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/textTodayAlarm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2분"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            style="@style/TextAppearance.Material3.BodyMedium" />

                        <TextView
                            android:id="@+id/textTodayAlarmStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="빠름"
                            android:textSize="12sp"
                            android:textColor="#00D4FF"
                            style="@style/TextAppearance.Material3.BodySmall" />

                    </LinearLayout>

                    <!-- 타이머 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏱️"
                            android:textSize="24sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/textTodayTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3시간"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            style="@style/TextAppearance.Material3.BodyMedium" />

                        <TextView
                            android:id="@+id/textTodayTimerStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="활발"
                            android:textSize="12sp"
                            android:textColor="#10B981"
                            style="@style/TextAppearance.Material3.BodySmall" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 생산성 점수 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⚡ 생산성 점수"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        style="@style/TextAppearance.Material3.TitleMedium" />

                    <TextView
                        android:id="@+id/textProductivityScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#00D4FF"
                        style="@style/TextAppearance.Material3.HeadlineMedium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점"
                        android:textSize="18sp"
                        android:layout_marginStart="4dp"
                        style="@style/TextAppearance.Material3.TitleMedium" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressProductivity"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="85"
                    android:max="100"
                    android:progressTint="#00D4FF"
                    android:progressBackgroundTint="#6B7280" />

                <TextView
                    android:id="@+id/textProductivityGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등급: A"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    style="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 라이프스타일 점수 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🏆 라이프스타일 점수"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        style="@style/TextAppearance.Material3.TitleMedium" />

                    <TextView
                        android:id="@+id/textLifestyleScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#10B981"
                        style="@style/TextAppearance.Material3.HeadlineMedium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점"
                        android:textSize="18sp"
                        android:layout_marginStart="4dp"
                        style="@style/TextAppearance.Material3.TitleMedium" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressLifestyle"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="78"
                    android:max="100"
                    android:progressTint="#10B981"
                    android:progressBackgroundTint="#6B7280" />

                <TextView
                    android:id="@+id/textLifestyleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태: 양호함"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    style="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 개인 맞춤 제안 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡 개인 맞춤 제안"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    style="@style/TextAppearance.Material3.TitleMedium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="현재 모든 지표가 양호합니다! 👏"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone"
                    style="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>