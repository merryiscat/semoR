<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- 시간 -->
    <TextView
        android:id="@+id/textAlarmTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="07:30"
        android:textSize="16sp"
        android:textColor="@color/md_theme_onSurface"
        android:textStyle="bold"
        android:gravity="start|center_vertical" />

    <!-- 라벨 -->
    <TextView
        android:id="@+id/textAlarmLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="기상 알람"
        android:textSize="14sp"
        android:textColor="@color/md_theme_onSurface"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="start|center_vertical" />

    <!-- 타입 -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chipAlarmType"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:text="알람"
        android:textSize="12sp"
        android:textColor="@color/neon_blue"
        app:chipBackgroundColor="#E6F7FF"
        app:chipStrokeColor="@color/neon_blue"
        app:chipStrokeWidth="1dp"
        app:chipCornerRadius="16dp"
        app:chipMinHeight="32dp"
        android:clickable="false"
        android:focusable="false" />

    <!-- 상태 -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chipAlarmStatus"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:text="완료"
        android:textSize="12sp"
        android:textColor="#22C55E"
        app:chipBackgroundColor="#ECFDF5"
        app:chipStrokeColor="#22C55E"
        app:chipStrokeWidth="1dp"
        app:chipCornerRadius="16dp"
        app:chipMinHeight="32dp"
        android:clickable="false"
        android:focusable="false" />

    <!-- 삭제 버튼 -->
    <ImageButton
        android:id="@+id/buttonDeleteAlarm"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="0.8"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="#EF4444"
        android:contentDescription="알람 기록 삭제"
        android:scaleType="fitCenter" />

</LinearLayout>