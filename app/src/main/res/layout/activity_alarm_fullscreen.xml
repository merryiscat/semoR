<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fullscreen_alarm_background"
    android:gravity="center"
    android:padding="24dp">

    <!-- 시간 표시 영역 -->
    <TextView
        android:id="@+id/tv_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:30"
        android:textSize="48sp"
        android:textColor="@color/neon_blue"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="32dp"
        android:shadowColor="@color/neon_blue"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:gravity="center" />

    <!-- 메리 캐릭터 애니메이션 영역 -->
    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginVertical="32dp">

        <!-- 캐릭터 배경 글로우 효과 -->
        <View
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@drawable/character_glow_background"
            android:alpha="0.3" />

        <!-- 메리 캐릭터 애니메이션 뷰 -->
        <com.semo.alarm.character.AlarmCharacterView
            android:id="@+id/alarm_character_view"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:contentDescription="메리 캐릭터" />

    </FrameLayout>

    <!-- 알람 라벨 -->
    <TextView
        android:id="@+id/tv_alarm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기상 시간이에요!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:alpha="0.9" />

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp">

        <!-- 해제 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dismiss"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="해제"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/neon_blue"
            app:cornerRadius="28dp"
            app:strokeWidth="0dp"
            android:elevation="4dp"
            android:stateListAnimator="@null" />

        <!-- 스누즈 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_snooze"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:text="스누즈"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            app:backgroundTint="@color/deep_gray"
            app:cornerRadius="28dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/deep_gray"
            android:elevation="2dp"
            android:stateListAnimator="@null" />

        <!-- 정지 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="정지"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            app:backgroundTint="@color/deep_gray"
            app:cornerRadius="28dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/deep_gray"
            android:elevation="2dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

</LinearLayout>